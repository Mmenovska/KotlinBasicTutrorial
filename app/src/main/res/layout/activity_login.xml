<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one">

    <TextView
        android:id="@+id/text_view_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_margin="16dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/text_view_android"
        android:layout_marginTop="110dp"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_password"
        android:layout_margin="16dp"
        android:background="#dda0dd"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="18dp"/>




    <EditText
        android:id="@+id/edit_text_user_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Login"
        android:layout_below="@+id/text_view_sign_in"
        android:layout_margin="16dp"
        android:textColor="@color/Purple"
        android:background="#C54B8C"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/edit_text_user_name"
        android:layout_margin="16dp"
        android:hint="Password"
        android:textSize="20dp"
        android:background="#C54B8C"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/text_view_forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_sign_in"
        android:layout_margin="16dp"
        android:text="Forgot your password?"
        />
    <TextView
        android:id="@+id/text_view_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_sign_in"
        android:layout_toRightOf="@id/text_view_forgot_pass"
        android:text="Sign Up"
        android:gravity="right"
        android:layout_margin="16dp"
        />






</RelativeLayout>